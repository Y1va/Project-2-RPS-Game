<div class="forum container text-center">
    <div class="row">
        <div class="forumTitle col">
            <h1 class="display-5 fw-bold">Welcome to Wagerless Community Forum!</h1>
            <h4 class="mt-4">Join our community and interact with like-minded players today!</h4>
        </div>
    </div>    
    <div class="forumPosts col">
        <h4 class="mt-4 display-6">FORUM POSTS</h4>
            <div class="row">
            {{#each forumPosts}}
            <div class="forumBox col-md-6">
                <div class="card mb-3">
                    <div class="card-body">

                        <h2 class="card-title mb-2 fs-4">
                            <a href="/post/{{id}}">{{title}}</a>
                        </h2>
                        {{#if user}}
                        <p class="card-text">Posted by: {{user.name}}</p>
                        {{else}}
                        <p class="card-text">Posted by: Unknown user</p>
                        {{/if}}
                        <p class="card-text"><small class="text-muted">{{format_date createdAt}}</small></p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <div class="addPost text-center mt-5">
        <a href="/addForumPost" class="btn btn-dark fw-bold">
            <span class="material-symbols-outlined me-2">add_circle</span>ADD NEW POST
        </a>
    </div>
</div>
