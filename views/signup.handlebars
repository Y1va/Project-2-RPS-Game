<main class="d-flex justify-content-center align-items-center vh-100"> 
  <div class="container">
      <div class="row justify-content-center">
          <div class="signUpBox col-lg-5 col-md-8 col-sm-12 d-flex flex-column align-items-center">
              <div class="signUpTitle">
                  <h2 class="display-6 mb-4">SIGN UP</h2>
              </div>
              <form class="form signup-form text-center">
                  <div class="row">
                      <div class="col-lg-6 col-md-12">
                          <div class="form-group mb-3">
                              <label for="name">NAME:</label><br>
                              <input class="form-control text-center" type="text" id="name"/>
                          </div>
                          <div class="form-group mb-4">
                              <label for="birthday">BIRTHDAY:</label><br>
                              <input class="form-control text-center" type="date" id="birthday"/>
                          </div>
                         <div class="form-group mb-3 mt-3">
                            <label for="gender">Gender:</label><br>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="maleGender" name="gender" value="M">
                                <label class="form-check-label" for="maleGender">M</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" id="femaleGender" name="gender" value="F">
                                <label class="form-check-label" for="femaleGender">F</label>
                            </div>
                        </div>
                      </div>
                        <div class="col-lg-6 col-md-12">
                            <div class="form-group mb-3">
                              <label for="email-signup">EMAIL:</label><br>
                              <input class="form-control text-center" type="email" id="email-signup"/>
                            </div>  
                            <div class="form-group mb-3">
                              <label for="password-signup">PASSWORD:</label><br>
                              <div class="input-group mb-3">
                                <input class="form-control" type="password" id="password-signup">
                                <button class="btn btn-outline-secondary toggle-password" data-target="password-signup" type="button">
                                    <i class="bi bi-eye-slash"></i>
                                </button>
                            </div>
                            <div class="form-group mb-3">
                              <label for="password-resignup">CONFIRM PASSWORD:</label><br>
                              <div class="input-group">
                                <input class="form-control" type="password" id="password-resignup">
                                <button class="btn btn-outline-secondary toggle-password" data-target="password-resignup" type="button">
                                    <i class="bi bi-eye-slash"></i>
                                </button>
                            </div>
                      </div>
                  </div>
                  <div class="form-group d-flex flex-column text-center">
                    <button id="signUpBtn2" class="btn btn-dark mt-2" type="submit">SIGN UP</button>
                  </div>
                </div>
              </form>
          </div>
      </div>
  </div>
</main>
    <script src="./js/signup.js"></script>
    <script src="./js/script.js"></script>
