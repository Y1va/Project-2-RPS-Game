<main class="d-flex justify-content-center align-items-center vh-100">
    <div class="row">
        <div class="loginBox col d-flex flex-column align-items-center">
          <div class="loginTitle">
            <h2 class="display-6 mb-3">LOGIN</h2>
          </div>
          <form class="form login-form text-center">
            <div class="form-group mb-4 mt-3">
              <label for="email-login">EMAIL:</label><br>
              <input class="form-control" type="email" id="email-login"/>
            </div>
            <div class="form-group mb-3">
              <label for="password-login">PASSWORD:</label><br>
              <div class="input-group">
                  <input class="form-control" type="password" id="password-login">
                  <button class="btn btn-outline-secondary toggle-password" data-target="password-login" type="button">
                      <i class="bi bi-eye-slash"></i>
                  </button>
              </div>
            </div>
          
            <div class="form-group d-flex flex-column text-center">
              <button id="loginBtn2" class="btn btn-dark mt-2" type="submit">LOGIN</button>
            </div>
          </form>
        </div>
    </div>
</main>  
    <script src="./js/login.js"></script>
    <script src="./js/script.js"></script>
